<div class="modal fade" id="comment-modal" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_with model: [work, comment], local: false do |f| %>
      <div class="modal-header">
        <h5 class="modal-title">New Comment</h5>
        <div id ="comments-error"></div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="form-group field">
          <%= f.text_area :body, placeholder: "作者に思いを伝えよう！", rows: '5', class: 'form-control comment-body' %>
        </div>
      </div>
      <div class="modal-footer actions">
        <%= f.submit "Comment",class: "btn btn-outline-success"%>
      </div>

      <% end %>
    </div>
  </div>
</div>
