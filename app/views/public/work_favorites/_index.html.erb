<% if work_favorites.blank? %>
  <p>データはありません</p>
<% else %>
  <% work_favorites.each do |favorite| %>
    <div class="row">
      <%= link_to work_path(favorite.work) do %>
        <%= image_tag favorite.work.get_work_image(200, 200) %>
      <% end %>
      <div class="col-8">
        <%= favorite.work.title %>
        <%= link_to user_path(favorite.work.user) do %>
          <%= favorite.work.user.name %>
        <% end %>
        <%= favorite.work.created_at.strftime('%Y/%m/%d %H:%M') %>
        <div class="row">
          <i class="fa-solid fa-comment"></i><%#= favorite.work.comments.count %>
          <div class="work-favorite-btn_<%= favorite.work.id %>">
            <%= render 'public/work_favorites/favorite-btn', work: favorite.work %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>