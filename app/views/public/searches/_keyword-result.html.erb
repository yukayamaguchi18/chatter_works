<div class="d-flex no-wrap", style="overflow-x: scroll; overflow-y: hidden; height: 10vh">
  <% users.each do |user| %>
    <%= link_to user_path(user) do %>
      <div class="d-flex">
        <%= image_tag user.get_profile_image(60, 60), style: "object-fit: cover; width: 60px; height: 60px;" %>
        <p><%= user.name %></p>
      </div>
    <% end %>
    <%#= "フォローする（未実装）", class: "btn btn-sm btn-primary" %>
  <% end %>
</div>
<div class="d-flex">
  <div style="overflow: scroll; overflow-x: hidden; width: 100vw; height: 80vh">
    <div class="chatters">
      <%= render 'public/chatters/index', chatters: @chatters %>
    </div>
  </div>
  <div style="overflow: scroll; overflow-x: hidden; width: 100vw; height: 80vh">
    <div class="works">
      <%= render 'public/works/index', works: @works %>
    </div>
  </div>
</div>