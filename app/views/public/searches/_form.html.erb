<div class="modal fade" id="search-modal" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_with url: search_path, method: :get do |f| %>
      <div class="modal-header">
        <h5 class="modal-title">Search</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="d-flex form-inline m-1">
          <%= f.select :model, options_for_select({ Keyword: "Keyword", WorkTag: "WorkTag" }, { selected: @model }), class: "form-control" %>
          <%= f.select :sort, options_for_select({ Newest: "Newest", Favorite: "Favorite" }, { selected: @sort }), class: "form-control" %>
        </div>
        <div class="form-group field">
          <%= f.text_field :word, value: @word, placeholder: "空白区切りでAND検索", class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer actions">
        <%= button_tag type: "submit", class: "btn btn-outline-success btn-sm" do %>
          <i class="fas fa-search"></i><span>Search</span>
        <% end %>
      </div>

      <% end %>
    </div>
  </div>
</div>
