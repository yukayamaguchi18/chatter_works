<div class="modal fade" id="user-image-modal" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_with model: user do |f| %>
      <div class="modal-header">
        <h5 class="modal-title">User Image Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group field">
          <p>Profile Image</p>
          <%= image_tag user.get_profile_image(150, 150), class: "rounded" %>
          <%= f.file_field :profile_image, accept: "image/*", value: user.profile_image.blob, required: true %>
        </div>
      </div>
      <div class="modal-footer actions">
        <%= f.submit "Edit",class: "btn btn-outline-success"%>
      </div>

      <% end %>
    </div>
  </div>
</div>