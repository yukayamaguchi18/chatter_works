<div class="modal fade" id="series-modal" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_with model: series, local: false do |f| %>
      <div class="modal-header">
        <% if series.new_record? %>
          <h5 class="modal-title">New Series</h5>
        <% else %>
          <h5 class="modal-title">Edit Series</h5>
        <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="series-error"></div>
        <div class="form-group field">

          <%= f.label "Title" %>
          <%= f.text_field :name, placeholder: "シリーズタイトル", class: "form-control series-body mb-3" %>
          <% if series.new_record? %>
            <div class="d-flex flex-column">
              <%= f.label "Series Image" %>
              <%= f.file_field :series_image, accept: "image/*", class: "mb-3" %>
            </div>
            <% h.hidden_field :user_id, value: current_user.id %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer actions">
        <% if series.new_record? %>
          <%= f.submit "Post", class: "btn btn-outline-success" %>
        <% else %>
          <%= f.submit "Edit", class: "btn btn-outline-success" %>
        <% end %>
      </div>

      <% end %>
    </div>
  </div>
</div>
