<div class="container-fluid p-3">
  <div class="d-flex tab-content" id="tab-content">
    <div class="col-12 col-md-6 chatter-tl tab-pane active" style="overflow-y: scroll; overflow-x: hidden; height: 85vh">
      <%= link_to update_tl_chatters_path, remote: true, class: "btn btn-outline-success btn-block" do %>
        <i class="fa-solid fa-rotate-left"></i>
      <% end %>
      <div class="chatters">
        <%= render 'public/chatters/index', chatters: @chatters %>
      </div>
      <% unless @chatters.blank? %>
        <%= link_to_next_page @chatters, 'もっと見る', params: { type: :chatter }, remote: true, class: 'btn btn-outline-success btn-block more-link', id: 'more-chatter' %>
      <% end %>
    </div>
    <div class="col-12 col-md-6 work-tl tab-pane" style="overflow-y: scroll; overflow-x: hidden; height: 85vh">
      <div class="d-flex">
        <%= link_to update_tl_works_path, remote: true, class: "btn btn-outline-success btn-block mx-1" do %>
          <i class="fa-solid fa-rotate-left"></i>
        <% end %>
        <button type="button" class="btn btn-outline-success mr-1" data-toggle="modal" data-target="#follow-tags-modal">
          <i class="fa-solid fa-tags"></i>
        </button>
      </div>
      <div class="works">
        <%= render 'public/works/index', works: @works %>
      </div>
      <% unless @works.blank? %>
        <%= link_to_next_page @works, 'もっと見る', params: { type: :work }, remote: true, class: 'btn btn-outline-success btn-block more-link', id: 'more-work' %>
      <% end %>
    </div>

  </div>

  <!--レスポンシブタブ-->
  <ul class="fixed-bottom nav nav-tabs nav-fill d-md-none d-flex">
    <li class="nav-item">
      <a href=".chatter-tl" class="nav-link active" data-toggle="tab">
        <i class="fa-solid fa-comment-dots"></i>
      </a>
    </li>
    <li class="nav-item">
      <a href=".work-tl" class="nav-link" data-toggle="tab">
        <i class="fa-solid fa-pen-fancy"></i>
      </a>
    </li>
  </ul>

      <div style="position: absolute; bottom: 3%; left: 1%;" id="chatter-btn">
        <button type="button" class="btn btn-outline-success rounded-circle mb-4 btn-lg" data-toggle="modal" data-target="#chatter-modal">
          <i class="fa-solid fa-comment-dots"></i>
        </button>
      </div>
      <div style="position: absolute; bottom: 3%; right: 0;" id="work-btn">
        <button type="button" class="btn btn-outline-success rounded-circle mb-4 mr-4 btn-lg" data-toggle="modal" data-target="#work-modal">
          <i class="fa-solid fa-pen-fancy"></i>
        </button>
      </div>
</div>

<!--chatter modal-->
<%= render 'public/chatters/modal', chatter: @chatter %>

<!--work modal-->
<%= render 'public/works/modal', work: @work %>

<!--follow tags modal-->
<%= render 'public/follow_tags/modal' %>

