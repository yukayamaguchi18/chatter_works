<% if flash[:notice] != nil %>
<div class="alert alert-success alert-dismissible">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
</div>
<% end %>
<% if flash[:alert] != nil %>
<div class="alert alert-danger alert-dismissible">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
</div>
<% end %>
