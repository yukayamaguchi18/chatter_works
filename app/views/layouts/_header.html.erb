<header style="background-color: #0d2e4f;">
  <div class="container-fluid">
    <div class="row mx-auto">
      <div class="col-3">
        <%= link_to root_path do %>
          <%#= image_tag 'logo_c.jpg', style: "object-fit: cover; width: 150px; height: 80px;" %>
        <% end %>
      </div>
      <div class="col-9">
        <ul class="row justify-content-end my-2 list-unstyled">
          <% if user_signed_in? %>
            <% if admin_signed_in? %>
              <li class="nav-item mx-2 mt-2">
                <%= link_to user_path(current_user) do %>
                  <%= image_tag current_user.get_profile_image(30, 30), class: "rounded" %>
                <% end %>
              </li>
              <li class="nav-item mx-2 mt-2">
                <i class="fa-solid fa-users"></i>
                <%= link_to "会員一覧", admin_root_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
              </li>
              <li class="nav-item mx-2 mt-2">
                <i class="fa-solid fa-right-from-bracket"></i>
                <%= link_to "会員ログアウト", destroy_user_session_path, method: :delete, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
              </li>
              <li class="nav-item mx-2 mt-2">
                <i class="fa-solid fa-right-from-bracket"></i>
                <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
              </li>
            <% else %>
              <li class="nav-item mx-2 mt-2">
                <%= link_to user_path(current_user) do %>
                  <%= image_tag current_user.get_profile_image(30, 30), class: "rounded" %>
                <% end %>
              </li>
              <li class="nav-item mx-2 mt-2">
                <i class="fa-solid fa-right-from-bracket"></i>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
              </li>
            <% end %>
          <% elsif admin_signed_in? %>
            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-users"></i>
              <%= link_to "会員一覧", admin_root_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>
            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-right-from-bracket"></i>
              <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>
          <% else %>
            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to "ログイン", new_user_session_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>
            <li class="nav-item mx-2 mt-2">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to "サインイン", new_user_registration_path, class: "text-decoration-none align-middle", style: "color: #3B240B" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>