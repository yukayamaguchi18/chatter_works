<div class="container p-3">
  <div class="row">
    <div class="col-12 mx-auto">

      <h2>管理者ログイン</h2>

      <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless mb-1">
          <tr>
            <td class="text-light"><%= f.label :email %></td>
            <td><span class="text-muted necessary-field p-1 px-2 ml-2 small rounded">必須</span></td>
            </td>
            <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class:"form-control w-90" %></td>
          </tr>
          <tr>
            <td class="text-light"><%= f.label :password, "パスワード" %></td>
            <td><span class="text-muted necessary-field p-1 px-2 ml-2 small rounded">必須</span></td>
            <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control w-90" %></td>
          </tr>
        </table>
        <% if devise_mapping.rememberable? %>
          <div class="field text-right">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-right">
          <%= f.submit "Log in", class: "btn btn-outline-success" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>