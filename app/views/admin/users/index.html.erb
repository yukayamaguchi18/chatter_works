<div class="container p-3">
  <div class="row mx-auto">
    <div class="col-12">
      <h1>Users</h1>
      <table class="table text-light m-2">
        <thead>
          <tr>
            <th>User</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to admin_user_path(user) do %>
                  <%= image_tag user.get_profile_image(50, 50) %>
                <% end %>
              </td>
              <td>
                <%= link_to user.name, admin_user_path(user), class: "text-light" %>
              </td>
              <td><%= link_to "Edit" ,edit_admin_user_path(user), class: "btn btn-outline-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>